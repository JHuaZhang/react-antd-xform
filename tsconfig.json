{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "dist/types", // 指定声明文件输出目录
    "outDir": "dist", // 添加输出目录
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "types": ["react", "react-dom", "mobx"] // 明确依赖的类型
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist", // 排除输出目录
    "**/__tests__/**",
    "**/*.stories.tsx"
  ]
}
